<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <EditText
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:hint="Item Name"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </EditText>

    <Button
        android:id="@+id/itemImageUpload"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:layout_marginTop="50dp"
        android:text="ADD IMAGE"
        android:layout_alignLeft="@id/itemImage">
    </Button>

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/itemName">
    </ImageView>

    <EditText
        android:id="@+id/itemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:hint="Item Description"
        android:layout_below="@id/itemImage">
    </EditText>

    <!-- THERE IS WHERE YOU SELECT FOR SALE, FOR RENT, OR BOTH -->
    <CheckBox
        android:id="@+id/itemForSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:text="For Sale"
        android:layout_below="@id/itemDescription">
    </CheckBox>

    <CheckBox
        android:id="@+id/itemForRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:text="For Rent"
        android:layout_below="@id/itemDescription">
    </CheckBox>

    <EditText
        android:id="@+id/itemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:hint="Item Price"
        android:layout_below="@id/itemForSale">
    </EditText>

    <TextView
        android:id="@+id/itemExpirationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Item Expiration Date"
        android:layout_below="@id/itemPrice">
    </TextView>

    <Button
        android:id="@+id/date_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/itemExpirationDate"
        android:text="Choose date" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/date_picker_button"
        android:text="Add Listing!" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>